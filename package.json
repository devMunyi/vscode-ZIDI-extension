{
  "name": "zidi-code-search",
  "displayName": "ZIDI Code Search",
  "icon": "images/icon.png",
  "publisher": "SamuelMunyi",
  "repository": "https://github.com/devMunyi/vscode-ZIDI-extension",
  "description": "Instantly search codesnippet on ZIDI staying in a context of your favorite vs-code. Select a line and initiate the instance search with a `cmd+m` (help) hotkey",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:zidi-instant-search.zidiCodeSearchByPromptInput",
    "onCommand:zidi-instant-search.zidiCodeSearchBySelectionInput"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zidi-instant-search.zidiCodeSearchByPromptInput",
        "title": "ZIDI Solution Search",
        "category": "Search",
        "icon": "vs-search"
      },
      {
				"command": "zidi-instant-search.zidiCodeSearchBySelectionInput",
				"title": "ZIDI Solution Search",
				"category": "Search",
				"icon": "vs-search"
			}
    ],
    "keybindings": [
			{
				"command": "zidi-instant-search.zidiCodeSearchByPromptInput",
				"key": "ctrl+m",
				"mac": "cmd+m"
			},
			{
				"command": "zidi-instant-search.zidiCodeSearchBySelectionInput",
				"key": "ctrl+shift+m",
				"mac": "cmd+shift+m"
			}
		]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "axios": "^1.2.3",
    "fast-xml-parser": "^4.0.13",
    "open": "^8.4.0"
  }
}
